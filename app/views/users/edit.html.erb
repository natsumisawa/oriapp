<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <div class="form-group">
      <h2>登録情報</h2>
        <div class="col-lg-6">
          <%= f.text_field :user_name, placeholder: "ユーザーネーム", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :icon, placeholder: "アイコン、まだアップロードにしてない", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
