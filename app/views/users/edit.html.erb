<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <div class="form-group">
      <h3>登録情報</h3>
          <%= f.text_field :user_name, placeholder: "ユーザーネーム", class: "form-control" %>
        <h3>プロフィール画像</h3>
          <%= f.file_field :icon, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
