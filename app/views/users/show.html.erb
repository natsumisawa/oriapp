<div class="clearfix move-down">
  <ul><li><h3><%= @user.user_name %></h3></li>
  <!-- アイコン未設定時の対応 -->
    <% unless current_user.full_profile? %>
      <div class="header_top panel panel-default col-lg-12 no-profile" style="padding:100px;">
        <p>ご登録ありがとうございます！まずはプロフィール設定をしましょう！</p>
        <%= link_to "プロフィール登録", edit_user_path(current_user), { class: "btn btn-lg" } %>
      </div>
    <% else %>
      <li><%= image_tag(@user.icon(:medium), :class => "mypage_icon") %></li></ul>
    <% end %>
  <div class="container">
    <article>
      <p>あなたのコスメを登録しましょう！</p>
      <span class="search_link">
        <%= link_to "コスメを検索","/items/search" %>
      </span>
    </article>
  </div>
</div>
<div class="container">
  <div class="move-little-down">
    <article class="pouch">
      <p>▽Your Pouch▽</p>
      <section id="portfolio">
          <div class="row">
            <% @reviews.each do |review| %>
            <div class="col-xs-3 portfolio-item">
            <ul>
              <!-- <li><%= review.item.name %></li> -->
              <!-- <li><%= review.item_img.color %></li> -->
              <li><%= link_to image_tag(review.item_img.img_url), item_review_path(review.item_id,review.id) %></li>
            </ul>
            </div>
          <% end %>
        </div>
      </section>
    </article>
  </div>
  <div class="move-down ">
    <h4>OTHER POUCH</h4>
    <% @other_users.each do |user| %>
      <ul>
      <div class="col-xs-2">
        <li><%= user.user_name %></li>
        <li><%= link_to image_tag(user.icon, :class => "mypage_icon"),  user_path(user.id) %></li>
      </div>
      </ul>
    <% end %>
  </div>
</div>