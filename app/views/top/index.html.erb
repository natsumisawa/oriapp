<!-- Slider Section -->
<section id="header-slider" class="section">
  <div id="myCarousel" class="carousel slide" data-ride="carousel"> 
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active"><%= image_tag "top.jpeg" %>
        <div class="carousel-caption">
          <h3>What's in your pouch?</h3>
          <p>あなたのコスメを登録しましょう！</p>
          <span class="search_link"><%= link_to "コスメを検索","/items/search" %></span>
        </div>
      </div>
      <div class="item"><img src="http://img.masi-maro.com/imgdet_17106_599657_imgdet_org.jpg">
        <div class="carousel-caption">
          <h3>HELLO</h3>
          <p>みんなのポーチをみてみよう！</p>
        </div>
      </div>
    </div>
    <!-- Controls --> 
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> <span class="sr-only">Previous</span></a> <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"> <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span> <span class="sr-only">Next</span></a></div>
</section>
<!-- Slider Section -->

<!-- 名前とアイコンをまず登録してもらう -->
<% if signed_in? %>
  <% unless current_user.full_profile? %>
    <div class="header_top panel panel-default col-lg-12 no-profile" style="padding:100px;">
      <p>ご登録ありがとうございます！まずはプロフィール設定をしましょう！</p>
      <%= link_to "プロフィール登録", edit_user_path(current_user), { class: "btn btn-lg" } %>
    </div>
  <% end %>
<% end %>

<!-- portfolio grid section -->
<section id="portfolio">
  <div class="container">
    <div class="row">
      <% @img.each do |ele| %>
        <% if ele.item_id == rand(100) %>
          <div class="col-sm-4 col-xs-3 portfolio-item">
            <img src=<%= ele.img_url %> alt="">
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<section id="testimonials" class="section testimonials no-padding">
  <div class="container-fluid">
    <div class="row no-gutter">
      <div class="flexslider">
        <ul class="slides">
          <li>
            <div class="col-md-12">
              <blockquote>
                <h4>あなたのポーチを管理します</h4>
                <p>あなたのコスメをポーチへイン!<br>すべてのコスメを大切にしよう！</p>
              </blockquote>
            </div>
          </li>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

